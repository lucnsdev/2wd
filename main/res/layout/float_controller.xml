<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/float_controller"
    android:elevation="4dp">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <View
            android:id="@+id/chamfer"
            android:layout_width="56dp"
            android:layout_height="4dp"
            android:layout_centerInParent="true"
            android:background="@drawable/chamfer" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonsBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:id="@+id/rootTexts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disconnected"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/textRssi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_toEndOf="@+id/textStatus"
                android:textColor="@color/white" />
        </RelativeLayout>

        <ImageButton
            android:id="@+id/buttonClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_3"
            android:background="@drawable/fab_transparent"
            android:src="@drawable/icon_close_18" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rootJoystick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsBar">

        <lucns.robot2wd.views.TouchableImageButton
            android:id="@+id/buttonUp"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:layout_marginStart="@dimen/margin_3"
            android:background="@drawable/button_transparent"
            android:src="@drawable/arrow_up_ios" />

        <lucns.robot2wd.views.TouchableImageButton
            android:id="@+id/buttonDown"
            android:layout_width="96dp"
            android:layout_height="64dp"
            android:layout_below="@+id/buttonUp"
            android:layout_marginStart="@dimen/margin_3"
            android:background="@drawable/button_transparent"
            android:src="@drawable/arrow_down_ios" />

        <lucns.robot2wd.views.TouchableImageButton
            android:id="@+id/buttonLeft"
            android:layout_width="64dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/buttonRight"
            android:background="@drawable/button_transparent"
            android:src="@drawable/arrow_back_ios" />

        <lucns.robot2wd.views.TouchableImageButton
            android:id="@+id/buttonRight"
            android:layout_width="64dp"
            android:layout_height="96dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_3"
            android:background="@drawable/button_transparent"
            android:src="@drawable/arrow_forward_ios" />
    </RelativeLayout>
</RelativeLayout>
